{
  "rules": {
    "users": {
      ".read": "root.child('admin').child(auth.uid).exists()",
      ".write": "root.child('admin').child(auth.uid).exists()",
      "$uid": {
        ".read": "$uid === auth.uid || root.child('admin').child(auth.uid).exists()",
        ".write": "$uid === auth.uid || root.child('admin').child(auth.uid).exists()"
      }
    },
    "tournaments": {
      ".read": "auth != null",
      ".write": "root.child('admin').child(auth.uid).exists()",
      "$tournamentId": {
        ".write": "root.child('admin').child(auth.uid).exists()",
        "registrations": {
          "$uid": {
            ".read": "$uid === auth.uid || root.child('admin').child(auth.uid).exists()",
            ".write": "$uid === auth.uid"
          }
        }
      }
    },
    "deposits": {
      ".read": "root.child('admin').child(auth.uid).exists()",
      ".write": "auth != null"
    },
    "withdrawals": {
      ".read": "root.child('admin').child(auth.uid).exists()",
      ".write": "auth != null"
    },
    "transactions": {
        ".read": "root.child('admin').child(auth.uid).exists()",
        "$uid": {
            ".write": "$uid === auth.uid || root.child('admin').child(auth.uid).exists()"
        }
    },
    "admin": {
      ".read": "root.child('admin').child(auth.uid).exists()",
      ".write": "root.child('admin').child(auth.uid).exists()"
    },
    "settings": {
        ".read": true,
        ".write": "root.child('admin').child(auth.uid).exists()"
    }
  }
}